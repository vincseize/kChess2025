    removeConfirmationModal() {
        const modal = document.getElementById('chessConfirmationModal');
        if (modal) {
            modal.remove();
        }
    }

    // Ex√©cuter la nouvelle partie
    executeNewGame() {
        console.log('üéÆ D√©but de nouvelle partie - Redirection vers index.php');
        
        // Arr√™ter d√©finitivement l'ancien timer
        this.stopTimer();
        
        // Redirection vers index.php pour nouvelle configuration
        setTimeout(() => {
            window.location.href = 'index.php';
        }, 500);
    }

    // Gestion am√©lior√©e des timers
    startTimer() {
        if (this.timerInterval) {
            this.stopTimer();
        }
        
        // V√©rifier que le jeu est actif
        if (!this.game.gameState.gameActive) {
            console.log('‚è±Ô∏è Timer non d√©marr√© - jeu non actif');
            return;
        }
        
        this.gameStartTime = Date.now();
        this.isTimerRunning = true;
        
        this.timerInterval = setInterval(() => {
            if (!this.game.gameState.gameActive) {
                this.stopTimer();
                return;
            }
            
            // Incr√©menter le temps du joueur actuel
            if (this.game.gameState.currentPlayer === 'white') {
                this.whiteTime++;
            } else {
                this.blackTime++;
            }
            
            this.updateTimerDisplay();
            
        }, 1000);
        
        console.log('‚è±Ô∏è Timer d√©marr√© - Jeu actif');
    }

    stopTimer() {
        if (this.timerInterval) {
            clearInterval(this.timerInterval);
            this.timerInterval = null;
        }
        this.isTimerRunning = false;
        console.log('‚è±Ô∏è Timer arr√™t√©');
    }

    resumeTimer() {
        if (this.game.gameState.gameActive && !this.isTimerRunning) {
            this.startTimer();
            console.log('‚è±Ô∏è Timer repris');
        }
    }

    resetTimers() {
        this.stopTimer();
        this.whiteTime = 0;
        this.blackTime = 0;
        this.updateTimerDisplay();
        console.log('‚è±Ô∏è Timers r√©initialis√©s');
    }

    updateTimerDisplay() {
        // CORRECTION : Utiliser les bons IDs (whiteTime et blackTime au lieu de whiteTimer et blackTimer)
        const whiteTimerElement = document.getElementById('whiteTime');
        const blackTimerElement = document.getElementById('blackTime');
        
        if (whiteTimerElement) {
            whiteTimerElement.textContent = this.formatTime(this.whiteTime);
            // Style pour le joueur actif
            if (this.game.gameState.currentPlayer === 'white') {
                whiteTimerElement.style.fontWeight = 'bold';
                whiteTimerElement.style.color = '#28a745';
            } else {
                whiteTimerElement.style.fontWeight = 'normal';
                whiteTimerElement.style.color = '';
            }
        } else {
            console.log('‚è±Ô∏è √âl√©ment whiteTime non trouv√©');
        }
        
        if (blackTimerElement) {
            blackTimerElement.textContent = this.formatTime(this.blackTime);
            // Style pour le joueur actif
            if (this.game.gameState.currentPlayer === 'black') {
                blackTimerElement.style.fontWeight = 'bold';
                blackTimerElement.style.color = '#28a745';
            } else {
                blackTimerElement.style.fontWeight = 'normal';
                blackTimerElement.style.color = '';
            }
        } else {
            console.log('‚è±Ô∏è √âl√©ment blackTime non trouv√©');
        }
    }

    formatTime(seconds) {
        const mins = Math.floor(seconds / 60);
        const secs = seconds % 60;
        return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
    }

    showNotification(message, type = 'info') {
        console.log(`üì¢ ${type.toUpperCase()}: ${message}`);
        
        // Utiliser le syst√®me de notification du gameStatusManager si disponible
        if (this.game.gameStatusManager && this.game.gameStatusManager.showNotification) {
            this.game.gameStatusManager.showNotification(message, type);
        } else {
            // Fallback simple
            alert(`${type.toUpperCase()}: ${message}`);
        }
    }

    // Copier FEN dans le presse-papier
    copyFENToClipboard() {
        try {
            const fen = FENGenerator.generateFEN(this.game.gameState, this.game.board);
            navigator.clipboard.writeText(fen).then(() => {
                this.showNotification('FEN copi√© dans le presse-papier !', 'success');
            }).catch(err => {
                console.error('Erreur copie FEN:', err);
                this.showNotification('Erreur lors de la copie du FEN', 'error');
