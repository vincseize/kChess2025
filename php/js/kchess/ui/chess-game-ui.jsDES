    // M√âTHODE AM√âLIOR√âE POUR L'HISTORIQUE DES COUPS
// M√âTHODE AM√âLIOR√âE POUR L'HISTORIQUE DES COUPS - 1 paire par ligne
updateMoveHistory() {
    const moveHistoryElement = document.getElementById('moveHistory');
    if (!moveHistoryElement) return;
    
    const moves = this.game.gameState.moveHistory;
    moveHistoryElement.innerHTML = '';
    
    // Appliquer le style container
    moveHistoryElement.className = 'move-history-container';
    
    // Grouper par paires de coups (2 coups par ligne)
    for (let i = 0; i < moves.length; i += 2) {
        const moveRowElement = document.createElement('div');
        moveRowElement.className = 'move-row';
        
        // Ajouter un √©v√©nement de clic pour s√©lection
        moveRowElement.addEventListener('click', () => {
            this.selectMoveRow(moveRowElement, i);
        });
        
        let moveHTML = '';
        
        // Num√©ro de coup
        const moveNumber = Math.floor(i / 2) + 1;
        
        // Paire de coups (blanc + noir)
        const whiteMove = moves[i];
        const blackMove = moves[i + 1];
        
        moveHTML += `<span class="move-number">${moveNumber}.</span>`;
        
        // Coup blanc
        if (whiteMove) {
            moveHTML += `<span class="white-move">${this.getMoveNotation(whiteMove)}</span>`;
        }
        
        // Coup noir
        if (blackMove) {
            moveHTML += `<span class="black-move">${this.getMoveNotation(blackMove)}</span>`;
        }
        
        moveRowElement.innerHTML = moveHTML;
        moveHistoryElement.appendChild(moveRowElement);
    }
    
    // Si aucun coup
    if (moves.length === 0) {
        moveHistoryElement.innerHTML = '<div class="text-center text-muted small p-3">Aucun coup jou√©</div>';
    }
    
    // Scroll vers le bas pour voir les derniers coups
    moveHistoryElement.scrollTop = moveHistoryElement.scrollHeight;
}

